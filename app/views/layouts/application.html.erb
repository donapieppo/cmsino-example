<!DOCTYPE html>
<html>
  <head>
    <title>CmsinoExample</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
    <div class="navbar">
      <%= link_to image_tag('it.png'), url_for(:locale => :it) %> -
      <%= link_to image_tag('en.png'), url_for(:locale => :en) %> -  
      <%= link_to 'help', helps_path %></li>  
      <% if user_signed_in? %>
        <%= link_to current_user.email, '#' %>
        <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
        <%= link_to "Cmsino", cmsino_contents_path %>
      <% else %>
        <%= link_to "Sign in with google", user_omniauth_authorize_path(:google_oauth2) %>
      <% end %>
    </div><!-- container -->
    </header>

    <div class="container">
      <% if notice %>  <p class="notice"><%= notice %></p><% end %>
      <% if alert %>  <p class="alert"><%= alert %></p><% end %>
      <%= editable_content(:hello, :layout) %>  
      <%= yield %>
    </div>
  </body>
</html>
