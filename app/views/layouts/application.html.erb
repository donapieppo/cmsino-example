<!DOCTYPE html>
<html>
  <head>
    <title>CmsinoExample</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <%= link_to 'Cmsino Power', home_path, :class => "brand" %>
          <ul class="nav nav-pills">
            <% if user_signed_in? %>
              <li><%= link_to current_user.email, '#' %></li>
              <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
              <li><%= link_to "Cmsino", cmsino_contents_path %></li>
            <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %></li>
            <% end %>
            <li><%= link_to 'it', url_for(:locale => :it) %></li>  
            <li><%= link_to 'en', url_for(:locale => :en) %></li>  
          </ul>
        </div>
      </div>
      <% if notice %>  <p class="notice"><%= notice %></p><% end %>
      <% if alert %>  <p class="alert"><%= alert %></p><% end %>

      <%= yield %>
    </div>
  </body>
</html>
